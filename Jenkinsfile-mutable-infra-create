pipeline {
  agent any

  stages {

    stage('Repo Clone') {
      steps {
        dir('terraform') {
          git branch: 'main', url: 'https://github.com/kana-Gayatri/terraform-mutable.git'
        }
      }
    }

    stage('VPC') {
      steps {
        dir('terraform') {
         sh 'ls -ltr'
         sh '''
         cd vpc
         //echo 'vpc'
         make dev-apply
         '''
        }
      }
    }

    }

  }


